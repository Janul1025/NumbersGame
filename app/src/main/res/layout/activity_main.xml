<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal">

    <LinearLayout android:id="@+id/linearLayoutSub"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="80px"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="@string/newGame"></Button>

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="80px"
            android:backgroundTint="@android:color/holo_purple"
            android:text="@string/about"></Button>

    </LinearLayout>
</LinearLayout>